<ul class="media-list">
  
<% kadaitasklists.each do |kadaitasklist| %>

<% user = kadaitasklist.user %>

    <li class="media">
      
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(current_user, options = { size: 50 }) %>" alt="">
      </div>
      
      <div class="media-body">
        <div>
          <%= link_to user.name, user_path(user) %>
          <span class="text-muted">posted at <%= kadaitasklist.created_at %></span>
        </div>
        
        <div>
          <p><%= kadaitasklist.content %></p>
          <p><%= kadaitasklist.status %></p>
        </div>
        
        <div>
          <% if current_user == kadaitasklist.user %>
            <%= link_to "Delete", kadaitasklist, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
      </div>
    </li>
    
    <% end %>
    <%= paginate kadaitasklists %>
</ul>